<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Piłalokalnie - serwis ogłoszeniowy</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    
    <nav class="navbar navbar-expand-sm  navbar-dark default-color bg-info shadow py-3">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">Piła lokalnie</a>
            <button class="navbar-toggler text-white " type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse text-white " id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto text-white ">
                    
                    <li class="nav-item text-white ">
                        <a class="nav-link waves-effect waves-light" href="#">
                            Obserwowane
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link waves-effect waves-light" href="@Url.Action("Message", "Home")">Wiadomości</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link waves-effect waves-light" href="@Url.Action("Logowanie", "Home")">Moje konto</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
        
    <div class="container body-content">
        @RenderBody()
        
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
