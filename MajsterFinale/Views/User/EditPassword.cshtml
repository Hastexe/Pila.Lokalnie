@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
﻿@model MajsterFinale.Models.UserEditPassword
<div class="container-fluid panel_mo">
    <div class="row no-gutters">
        <div class="col-md-12 panel_top rounded p-3">
            <b>Witaj, @Session["MAIL"]</b>
            <h1>Ustawienia</h1>
        </div>
        <div class="col-md-12 panel_mid rounded p-3">
            <nav class="nav flex-column flex-sm-row">
                <a class="nav-link " href="@Url.Action("MojeOgloszenia", "Adverts", null)">Moje ogłoszenia</a>
                <a class="nav-link disabled" href="@Url.Action("Obserwowane", "Adverts", null)">Obserwowane (work in progress)</a>
                <a class="nav-link " href="@Url.Action("Messages", "User", null)">Wiadomości</a>
                <a class="nav-link " href="@Url.Action("ArchiveAd", "Adverts", null)">Archiwum</a>
                <a class="nav-link active" href="@Url.Action("EditData", "User", null)">Ustawienia</a>
            </nav>
        </div>
        <div class="col-md-12 panel_mid rounded p-3">
            <nav class="nav flex-column flex-sm-row">
                <a class="nav-link " href="@Url.Action("EditData", "User", null)">Zmiana danych</a>
                <a class="nav-link active" href="@Url.Action("EditPassword", "User", null)">Zmiana hasła</a>
            </nav>
        </div>
        <div class="col-md-12 panel_bottom rounded">
            @{
                if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    <script type="text/javascript">
                alert("@ViewBag.Message");
                    </script>

                }
                if (Session["ID"] != null)
                {
                    <div style="background-color:white;">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    <div class="col-md-2">
                                        <p>Aktualne hasło: </p>
                                        @Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { @class = "form-control disabled" } })
                                        @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
                                        <small class="form-text text-muted">Wpisz swoje aktualne hasło.</small>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-2">
                                        <p>Nowe hasło:</p>
                                        @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                                        <small class="form-text text-muted">Wpisz nowe hasło.</small>
                                    </div>
                                </div>
                                <div class="form-group">

                                    <div class="col-md-2">
                                        <p>Powtórz nowe hasło: </p>
                                        @Html.EditorFor(model => model.ConfirmNewPassword, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.ConfirmNewPassword, "", new { @class = "text-danger" })
                                        <small class="form-text text-muted">Wpisz ponownie nowe hasło.</small>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-2">
                                    <input type="submit" value="Zapisz" class="btn btn-custom" />
                                </div>
                            </div>
                            <br>
                        }
                    </div>
                }
            }
        </div>
    </div>
</div>