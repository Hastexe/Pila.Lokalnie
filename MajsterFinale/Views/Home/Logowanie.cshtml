@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model MajsterFinale.Models.USERS
@using (Html.BeginForm("Logowanie", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="container loginreg">
        <div class="row">
            <div class="col-sm-12 d-flex justify-content-center">
                <div class="card mb-3 form-signin">
                    <h1 class="h2 mb-5 mt-2">Zaloguj się</h1>
                    <div class="form-group">
                        <label class="label-success" style="color: red;">@ViewBag.Message</label>
                    </div>
                    <span class="logp"><p>E-mail:</p></span>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <div class="">
                            @Html.EditorFor(model => model.MAIL, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MAIL, "", new { @class = "text-danger" })

                        </div>
                    </div>
                    <span class="logp"><p>Hasło:</p></span>
                    <div class="form-group">
                        <div class="">
                            @Html.EditorFor(model => model.PASSWORD, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.PASSWORD, "", new { @class = "text-danger" })

                            <span class="logp"><p><a href="@Url.Action("ForgotPassword", "home", null)">Zapomniałem hasła</a></p></span>
                        </div>
                    </div>
                    @*<div class="form-group">
                        <span>
                        @Html.CheckBoxFor(model => model.rememberMe) Zapamiętaj mnie
                        </span>
                        </div>*@

                    <div class="form-group">
                        <input type="submit" value="Zaloguj" class="btn btn-lg btn-custom btn-block" />
                    </div>
                    <div class="form-group text-center">
                        <span class="logp"><p><a href="@Url.Action("Rejestracja", "home", null)">Nie masz konta? Zarejestruj się</a></p></span>
                        <p class="smalltext">Zalogowanie oznacza akceptację <a href="@Url.Action("Regulamin", "home", null)">Regulaminu</a> serwisu Piłalokalnie.pl w aktualnym brzmieniu. Jeśli nie akceptujesz warunków zmienionego <a href="@Url.Action("Regulamin", "home", null)">Regulaminu</a> serwisu Piłalokalnie.pl, wyślij oświadczenie o rozwiązaniu Umowy w trybie przewidzianym w <a href="@Url.Action("Regulamin", "home", null)">Regulaminu</a>.*</p>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // extend range validator method to treat checkboxes differently
        var defaultRangeValidator = $.validator.methods.range;
        $.validator.methods.range = function (value, element, param) {
            if (element.type === 'checkbox') {
                // if it's a checkbox return true if it is checked
                return element.checked;
            }
            else {
                // otherwise run the default validation function
                return defaultRangeValidator.call(this, value, element, param);
            }
        }
    </script>
}