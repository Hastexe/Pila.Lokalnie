@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container loginreg">
        <div class="row">
            <div class="col-sm-12 d-flex justify-content-center">
                <div class="card mb-3 form-signin">
                    <h1 class="h2 mt-2">Zresetuj hasło</h1>
                    
                    <span class="logp"><p>Wpisz email:</p></span>
                    <div class="form-group">
                        <div>
                            @Html.TextBox("MAIL", "", new { @class = "form-control" })
                        </div>
                    </div>           
                    <div class="form-group">
                        @Html.ValidationMessage("MAIL", new { @class = "text-danger" })
                        <label class="label-success" style="color: green;">@ViewBag.SuccessMessage</label>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Wyślij" class="btn btn-lg btn-custom btn-block" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}