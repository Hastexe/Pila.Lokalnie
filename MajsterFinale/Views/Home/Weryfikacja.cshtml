@model MajsterFinale.Models.ActivationUserModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("AccountConfirm", "Home", FormMethod.Post))
{ 

<div class="container-fluid ver">
    <div class="row">
        <div class="col-md-12 panel_top rounded p-3">
            <h2>Weryfikacja konta</h2>
        </div>

        <div class="col-md-12 panel_mid rounded mt-0 p-3">
            <div class="form-group">
                @Html.HiddenFor(a => a.uID)
            </div>
            <input type="submit" class="btn btn-lg btn-custom btn-block" value="Aktywuj" onclick="Verified()" />
        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
}
