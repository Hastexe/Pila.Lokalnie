@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model PagedList.IPagedList<MajsterFinale.Models.ADVERTS>
@using PagedList.Mvc;
<div class="container-fluid cat_main">
    <div class="row">
        <div class="col-md-12 rounded index_searchbar">
            <div class="searchbarbox">
                @using (Html.BeginForm("Wyszukiwanie", "Home", FormMethod.Get))
                {
                    <form action="">
                        <div class="input-group justify-content-center">
                            @Html.TextBox("search", null, new { @class = "searchbartext" })
                            <div class="input-group-append">
                                <button class="btn btn-custom" type="submit"><i class="fas fa-search"></i></button>
                            </div>
                        </div>
                    </form>
                }
            </div>
        </div>
        <div class="col-md-3 rounded cat_side">
            <div>
                <script>
                    document.write('<span class="backarrow"><a id="backbutton" href="' + document.referrer + '"><i class="fas fa-chevron-left"></i>Powrót do strony głównej</a></span>');
                </script>
            </div>
            <h1>Kategoria: Dom</h1>
            <hr>
            <ul class="nav flex-column" style="line-height: 85%; ">
                <li class="nav-item">
                    <a class="nav-link active" href="@Url.Action("Dom", "Categories", null)">Wszystkie ogłoszenia</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("AranzacjaWnetrz", "Categories", null)">Aranżacja Wnętrz</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Hydraulika", "Categories", null)">Hydraulika </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Elektryka", "Categories", null)">Elektryka </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Gazownictwo", "Categories", null)">Gazownictwo </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Malarstwo", "Categories", null)">Malarstwo </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Kominiarstwo", "Categories", null)">Kominiarstwo </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Stolarstwo", "Categories", null)">Stolarstwo </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("DomInne", "Categories", null)">Dom Inne </a>
                </li>
            </ul>
        </div>
        <div class="col-md-9 ">
            <div class="col-12 rounded cat_adv">
                <h2>
                    Ogłoszenia<h2>

                        @foreach (var item in Model)
                        {
                            <div class="card bg-light border-0 mb-2">
                                <div class="card-horizontal p-2">
                                    <div class="img-square-wrapper">
                                        <a href="@Url.Action("Details", "Adverts", new { id = item.ID }) "><img class="" src="http://via.placeholder.com/200x140" alt="Card image cap"></a>
                                    </div>
                                    <div class="card-body">
                                        <div style="float:left">
                                            <h4 class="card-title"><a href="@Url.Action("Details", "Adverts", new { id = item.ID })">@Html.DisplayFor(modelItem => item.TITLE)</a></h4>
                                            <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
                                        </div>
                                        <div style="float:right">
                                            <h4 class="card-title">@Html.DisplayFor(modelItem => item.PRICE) zł</h4>
                                        </div>
                                        <div style="position: absolute;bottom: 0;">
                                            <h6 class="card-subtitle mb-2 text-muted">Dodano: xx:xx:xx</h6>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="col-md-12 text-center" style="background-color:transparent;">
                            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

                            @Html.PagedListPager(Model, page => Url.Action("Adverts", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
                        </div>
            </div>
        </div>
    </div>
</div>





<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>